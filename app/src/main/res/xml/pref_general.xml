<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/pref_default_hostname"
        android:inputType="text"
        android:key="router_hostname"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_router_hostname" />

    <EditTextPreference
        android:defaultValue="@string/pref_default_port"
        android:inputType="numberDecimal"
        android:key="router_port"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_router_port" />

    <EditTextPreference
        android:key="@string/wifi_name_prefix"
        android:summary="WiFi network name starts with"
        android:defaultValue="ZIPD-"
        android:inputType="text"
        android:persistent="true"
        android:title="WiFi domain prefix"/>

    <EditTextPreference
        android:key="@string/zip_config_password"
        android:summary="ZIP config password"
        android:defaultValue=""
        android:inputType="text"
        android:persistent="true"
        android:title="Config Password"/>
    <EditTextPreference
        android:key="@string/zip_wifi_password"
        android:summary="ZIP wifi password"
        android:defaultValue=""
        android:inputType="text"
        android:persistent="true"
        android:title="ZIP WiFi Password"/>
</PreferenceScreen>
